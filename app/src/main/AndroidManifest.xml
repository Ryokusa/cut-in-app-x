<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryokusasa.cut_in_app">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/toolbarTheme"
        android:name="com.ryokusasa.cut_in_app.UtilCommon">
        <activity android:name="com.ryokusasa.cut_in_app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ryokusasa.cut_in_app.SelCutInActivity"
            android:parentActivityName="com.ryokusasa.cut_in_app.MainActivity"/>
        <activity android:name="com.ryokusasa.cut_in_app.CutInEditer.CutInEditerActivity"/>
        <service android:name="com.ryokusasa.cut_in_app.CutInService"></service>

        <service android:name="com.ryokusasa.cut_in_app.CustomNotificationListenerService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService"/>
            </intent-filter>
        </service>
    </application>

</manifest>